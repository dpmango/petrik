extends shared/_layout
block content

  // PROJECT
  .project(js-set-project-colors data-bg-color="#110B27" data-font-color="#F1CB81")
    // section text (T project header)
    .section.section--text
      .container.container--offset-1
        .row
          .col.col--40
            .p-label.ttu ROCKETBANK
            .h2-title Second project (bg modifier)
          
          .col.col--60
            .p-main Our friends from Rocketbank showed up with awesome news – in partnership with Claustrophobia they had launched special quest, where you can exchange earned points for real rubles.
    
    // section 1 video (I 1 video)
    .section.section--media
      .container
        figure.figure
          // video component
          .video.scaler(
            js-video
            data-provider="vimeo"
            data-src="https://player.vimeo.com/video/91708492"
            style="padding-bottom: "+ (792/1410)*100 +"%; background-image: url(https://res.cloudinary.com/dqruxbmfq/image/upload/w_64,c_fill,e_blur:400/v1544280402/petrik/media_1.jpg)")
            .video__placeholder
              .video__play
                +svgMono("play")
              img(js-lazy data-src='img/media_1.jpg' data-srcset='img/media_1@2x.jpg 2x' alt="")
            .video__player
              // player code will be embeded
          
          figcaption.figcaption.p-label Commercial #1
          
    // section 1 video (I 1 video)
    .section.section--media
      .container
        figure.figure
          // video component
          .video.scaler(
            js-video
            data-provider="youtube"
            data-src="https://www.youtube.com/embed/m0S0qg4Zh7Y"
            style="padding-bottom: "+ (792/1410)*100 +"%; background-image: url(https://res.cloudinary.com/dqruxbmfq/image/upload/w_64,c_fill,e_blur:400/v1544280402/petrik/media_5.jpg)")
            .video__placeholder
              .video__play
                +svgMono("play")
              img(js-lazy data-src='img/media_5.jpg' data-srcset='img/media_5@2x.jpg 2x' alt="")
            .video__player
              // player code will be embeded
          
          figcaption.figcaption.p-label Commercial #2

    // section text (T 2)
    .section.section--text
      .container.container--offset-1
        .row
          .col.col--60
            p.p-main To highlight arcade nature of the quest, it was agreed to use pixels. We were very excited, so we turned lava, VAZ 2105 and even bullies into pixels.
            p.p-main Our friends from Rocketbank showed up with awesome news – in partnership with Claustrophobia they had launched special quest.
          .col.col--30.mla
            p.blockquote.p-main
              span 25 characters
              span 15 minutes of animation
              span 3340 business meetings
    
    // section 2 images (I 2)
    .section.section--media
      .container.container--offset-1
        .row.row--gutter-12
          .col.col--50
            figure.figure
              .scaler(style="padding-bottom: "+ (600/509)*100 +"%; background-image: url(https://res.cloudinary.com/dqruxbmfq/image/upload/w_64,c_fill,e_blur:400/v1544280402/petrik/media_3.jpg)")
                img(js-lazy data-src='img/media_3.jpg' data-srcset='img/media_3@2x.jpg 2x' alt="")
              figcaption.figcaption.p-label Dancing in ‘Metatr Shop’
          .col.col--50
            figure.figure
              .scaler(style="padding-bottom: "+ (600/509)*100 +"%; background-image: url(https://res.cloudinary.com/dqruxbmfq/image/upload/w_64,c_fill,e_blur:400/v1544280402/petrik/media_4.jpg)")
                img(js-lazy data-src='img/media_4.jpg' data-srcset='img/media_4@2x.jpg 2x' alt="")

    // section text (T 3)
    .section.section--text
      .container.container--offset-1
        .row
          .col.col--60.col--center.tac
            p.p-big To highlight arcade nature of the quest, it was agreed to use pixels. We were very excited, so we turned lava, VAZ 2105 and even bullies.

